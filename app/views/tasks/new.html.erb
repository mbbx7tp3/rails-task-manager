<h1> Create a task </h1>

<% @task = Task.new  %>

<%= form_for @task do |f| %>
  <%= f.label :title, "What is the task" %>
  <%= f.text_field :title %>
  <%= f.label :details, "Describe the task" %>
  <%= f.text_field :details %>
  <%= f.label :completed%>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
