<h1> My Tasks </h1>

<% @tasks.each do |task| %>

<li>  <%= link_to task.title, task_path(task) %>
  <% if task.completed %>
   ✔️
  <% else %>
  ✖️
  <% end %>
</li>
<p> <%= link_to "Remove Task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %> </p>
<% end %>

<p> <%= link_to "➕Add a new Task", new_path %> </p>


