<h1> My Tasks </h1>

<% @tasks.each do |task| %>

<div class="container"> <li class="list-group"> <%= link_to task.title, task_path(task)%> Completed <%= task.completed %>
</li>
<p> <%= link_to "Mark as complete / edit task", edit_path(task) %>
<p> <%= link_to "Remove Task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %> </p>
</div>
<% end %>

